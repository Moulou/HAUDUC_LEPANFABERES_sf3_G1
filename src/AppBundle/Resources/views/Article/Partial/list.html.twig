{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ parent () ~ ' - Liste' }}{#rajoute home Ã  la fin du title#}
{% endblock %}

{% block body %}



<ul>
    {% for article in articles %} {#pour un objet dans une liste d'objet#}
        Articles avec le tag : {{ article.tag }}
        <li>
            <h3>{% if article.title is not null %}{{ article.title }} {% endif %}</h3>
            <p>{{ article.content }}</p>
            <p>Par : {{ article.author }}</p>
            <p>Le : {{ article.createdAt|date('md/d/Y H:i') }}</p>
            <a href="{{ path('article_list', {'tag' : article.tag }) }}">{{ article.tag }}</a>
        </li>
    {% endfor %}
</ul>
{% endblock %}
{% block endbody %}
{% endblock %}